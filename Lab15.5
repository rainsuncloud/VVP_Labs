#include <stdio.h>
#include <locale.h>

float Fact2(int n)
{
    int fac;
    int p = 1;
    if (n % 2 == 1) {
        for (fac = 1; fac <= n; fac += 2) {
            p *= fac;
        }
    }
    else if (n % 2 == 0) {
        for (fac = 2; fac <= n; fac += 2) {
            p *= fac;
        }
    }
    return p;
}

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;

    printf("N = ");
    scanf("%d", &n);

    if (n > 0) {
        printf("%.0f", Fact2(n));
    }
    else printf("Необходимо ввести число больше 0");
    
    return 0;
}

#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;

    printf("N = ");
    scanf("%d", &n);
    
    if (n > 1) {
        int a[n];
        for (int i = 0; i < n; i++) {
            printf("a[%d] = ", i + 1);
            scanf("%d", &a[i]);
	    }
        int s = a[1];
        for (int i = 3; i < n; i += 2) {
            if (a[i] < s) {
                s = a[i];
            }
        }
        printf("Наименьший элемент с четным номером: %d", s);
    }
    else printf("Необходимо ввести N больше 0");
    
    return 0;
}

#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n, A, d;

    printf("N = ");
    scanf("%d", &n);
    printf("A = ");
    scanf("%d", &A);
    printf("D = ");
    scanf("%d", &d);
    
    int a[n];
    int k = A;

    if (n > 1) {
        for (int i = 0; i < n; i++) {
            a[i] = k;
            printf("a[%d] = %d\n", i, k);
            k *= d;
        }
    }
    else printf("Необходимо ввести N больше 1");
    
    return 0;
}

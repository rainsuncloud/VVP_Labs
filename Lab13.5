#include <stdio.h>
#include <math.h>

int main()
{
    int n;
    float a, a1;
    float s = 0;

    printf("N = ");
    scanf("%d", &n);
    printf("A = ");
    scanf("%f", &a);
    
    if (n > 0) {
        for (int i = 0; i <= n; i++) {
            a1 = pow(a, i);
            s = s + a1 * pow(-1, i);
        }
        printf("%f\n", s);
    }
    return 0;
}

#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;

    printf("N = ");
    scanf("%d", &n);
    
    int a[n];
    
    for (int i = 0; i < n; i++) {
		  a[i] = rand() % n;
	  }
	  for (int i = 0; i < n; i++) {
		  printf("a[%d] = %d\n", i, a[i]);
	}

    if (n > 0) {
        for (int i = 0; i < n / 2; i++) {
            printf("%d, ", a[i]);
            printf("%d, ", a[n - 1 - i]);
        }
        if (n % 2 != 0) {
            printf("%d", a[n / 2]);
        }
    }
    else printf("Необходимо ввести число N больше 0");
    
    return 0;
}

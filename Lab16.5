#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;

    printf("N = ");
    scanf("%d", &n);
    
    int a[n];
    
    for (int i = 0; i < n; i++) {
		a[i] = rand() % n;
	}
	for (int i = 0; i < n; i++) {
		printf("a[%d] = %d\n", i + 1, a[i]);
	}

    if (n > 0) {
        printf("элементы с нечетными номерами в порядке возрастания:\n");
        for (int i = 0; i < n; i += 2) {
            printf("%d, ", a[i]);
        }
        printf("\nэлементы с четными номерами в порядке убывания:\n");
        if (n % 2 == 0) {
            for (int i = n - 1; i > 0; i -= 2) {
                printf("%d, ", a[i]);
            }
        }
        else {
            for (int i = n - 2; i > 0; i -= 2) {
                printf("%d, ", a[i]);
            }
        }
    }
    else printf("Необходимо ввести число N больше 0");
    
    return 0;
}

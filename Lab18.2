#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;
    int s = 0;
    int c = 1;

    printf("N = ");
    scanf("%d", &n);
    
    if (n > 0) {
        int a[n];
        float b[n];
        for (int i = 0; i < n; i++) {
            printf("a[%d] = ", i + 1);
            scanf("%d", &a[i]);
	    }
	    for (int i = 0; i < n; i++) {
	        s += a[i];
	        b[i] = (float) s / c;
	        c++;
	    }
	    printf("\nМассив B:\n");
	    for (int i = 0; i < n; i++) {
            printf("%f, ", b[i]);
	    }
    }
    else printf("Необходимо ввести N больше 0");
    
    return 0;
}

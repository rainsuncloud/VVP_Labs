#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n, A, b;

    printf("N = ");
    scanf("%d", &n);
    printf("A = ");
    scanf("%d", &A);
    printf("B = ");
    scanf("%d", &b);
    
    int a[n];

    if (n > 2) {
        printf("a[0] = %d\n", A);
        printf("a[1] = %d\n", b);
        int s = A + b;
        for (int i = 2; i < n; i++) {
            a[i] = s;
            printf("a[%d] = %d\n", i, s);
            s += s;
        }
    }
    else printf("Необходимо ввести число N больше 2");
    
    return 0;
}

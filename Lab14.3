#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Rus");

    int n;
    int c = 1;
    int s = 0;

    printf("N = ");
    scanf("%d", &n);
    
    if (n > 1) {
        while (s <= n) {
            s += c;
            c++;
        }
        printf("K = %d\n", c - 1);
        printf("Сумма = %d", s);
    }
    else
    printf("Необходимо ввести N > 1");
    return 0;
}
